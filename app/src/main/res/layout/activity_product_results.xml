<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1A1A1A">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvSearchQuery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Searching..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:ellipsize="middle"
            android:singleLine="true"
            android:layout_marginHorizontal="8dp" />

    </LinearLayout>

    <!-- Main Content: Shopping Platform Buttons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a shopping platform to find matching products:"
                android:textColor="#CCCCCC"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />

            <!-- Amazon Button -->
            <Button
                android:id="@+id/btnAmazon"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Search on Amazon"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#FF9900"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- eBay Button -->
            <Button
                android:id="@+id/btnEbay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Search on eBay"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#E53238"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- AliExpress Button -->
            <Button
                android:id="@+id/btnAliExpress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Search on AliExpress"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#FF4747"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginBottom="24dp" />

            <!-- USDC Payment Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay with Crypto"
                android:textColor="#BB86FC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy an Amazon gift card with USDC on Bitrefill, then use it to purchase your item."
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Buy with USDC Button -->
            <Button
                android:id="@+id/btnBuyUsdc"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Buy with USDC (via Bitrefill)"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="#512DA8"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Wallet Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1A1A1A">

        <Button
            android:id="@+id/btnConnectWallet"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:backgroundTint="#512DA8"
            android:text="Connect Wallet"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvWalletStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Not Connected"
            android:textColor="#888888"
            android:textSize="10sp"
            android:gravity="center"
            android:ellipsize="middle"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>
